
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="insideOverlay"
            android:id="@+id/scroll_view">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="sobmad.com.gamingreminder.Settings.SettingsActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:textAllCaps="true"
            android:background="@android:color/holo_blue_dark"
            android:textSize="12sp"
            android:id="@+id/image_section_text"
            android:textStyle="bold"
            android:text="Image Pre-Fetch"
            android:textColor="#ffffffff"/>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@+id/image_section_text"
                        tools:context="sobmad.com.gamingreminder.Settings.SettingsActivity"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:id="@+id/image_clear_cache"
            >

            <TextView
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/clear_text_view"
                android:text="Clear Image Cache "
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete all images in cache"
                android:id="@+id/clear_more_info"
                android:layout_below="@+id/clear_text_view"
                android:textSize="13dp"/>
        </RelativeLayout>

