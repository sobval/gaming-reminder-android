<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="SET Reminder?"
        android:textSize="15dp"
        android:background="@android:color/holo_blue_dark"
        android:textColor="#ffffffff"/>

    <RadioGroup
        android:id="@+id/radio_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dialog_title">

        <RadioButton
            android:textSize="11dp"
            android:id="@+id/radio_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day of Release"
            android:checked="true"
            android:layout_below="@+id/dialog_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <RadioButton
            android:textSize="11dp"
            android:id="@+id/radio_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Week Before Release"
            android:layout_below="@+id/dialog_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checked="false"/>

        <RadioButton
            android:textSize="11dp"
            android:id="@+id/radio_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specific Date"
            android:layout_below="@+id/dialog_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checked="false"/>

        <RadioButton
            android:textSize="11dp"
            android:id="@+id/delete_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Reminder"
            android:layout_below="@+id/radio_date"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checked="false"/>

    </RadioGroup>

    <LinearLayout

        android:id="@+id/layoutDialog"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/radio_buttons">

        <Button
            android:textSize="13dp"
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:text="Cancel"
            android:background="@android:color/holo_blue_dark"
            android:textColor="#ffffffff"
            />

        <Button
            android:textSize="13dp"
            android:id="@+id/dialog_set"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:text="SET"
            android:background="@android:color/holo_blue_dark"
            android:textColor="#ffffffff"/>
    </LinearLayout>




</RelativeLayout>